# 1 for 64bit, 0 for 32bit:
URHO3D_SRC_DIR=Urho3D/Source
TARGET=Visual Studio 14 Win64

ifeq ($(RENDERER), D3D11)
RENDERER_FLAGS=-DURHO3D_OPENGL=0 -DURHO3D_D3D11=1
else ifeq ($(RENDERER), D3D9)
RENDERER_FLAGS=-DURHO3D_OPENGL=0 -DURHO3D_D3D11=0
else 
RENDERER_FLAGS=-DURHO3D_OPENGL=1
endif

Urho3D_Windows:
	rm -rf Urho3D/Urho3D_Windows/CMakeFiles && rm -rf Urho3D/Urho3D_Windows/CMakeCache.txt && cd $(URHO3D_SRC_DIR) && cmake -E make_directory ../Urho3D_Windows && cmake -E chdir ../Urho3D_Windows cmake -G "$(TARGET)" ../Urho3D_Windows $(RENDERER_FLAGS) -DURHO3D_PCH=0 -DURHO3D_LUA=0 -DURHO3D_ANGELSCRIPT=0 -VS=14 ../../$(URHO3D_SRC_DIR)/

libUrho3D.a: Urho3D_Windows
	cd Urho3D/Urho3D_Windows && cmake --build . --target Urho3D --config Debug && cmake --build . --target PackageTool --config Release

# move several mdl files from Data to CoreData 
MoveSomeAssetsFromDataToCoreData:
	cd Urho3D/Source/bin && mkdir -p CoreData/Models && mkdir -p CoreData/PostProcess && mkdir -p CoreData/Fonts && cp Data/Models/Box.mdl CoreData/Models/Box.mdl && cp Data/Models/Cone.mdl CoreData/Models/Cone.mdl && cp Data/Models/Cylinder.mdl CoreData/Models/Cylinder.mdl && cp Data/Models/Plane.mdl CoreData/Models/Plane.mdl && cp Data/Models/Pyramid.mdl CoreData/Models/Pyramid.mdl && cp Data/Models/Sphere.mdl CoreData/Models/Sphere.mdl && cp Data/Models/Torus.mdl CoreData/Models/Torus.mdl && cp "Data/Fonts/Anonymous Pro.ttf" "CoreData/Fonts/Anonymous Pro.ttf" && cp "Data/PostProcess/FXAA2.xml" "CoreData/PostProcess/FXAA2.xml" && cp "Data/PostProcess/FXAA3.xml" "CoreData/PostProcess/FXAA3.xml" && cp "Data/PostProcess/Blur.xml" "CoreData/PostProcess/Blur.xml"
	
CoreData.pak: MoveSomeAssetsFromDataToCoreData
	mkdir -p Bin && Urho3D/Urho3D_Windows/bin/tool/PackageTool.exe Urho3D/Source/bin/CoreData Bin/CoreData.pak -q && rm -r Urho3D/Source/bin/CoreData/Models && rm -r Urho3D/Source/bin/CoreData/Fonts && rm -r Urho3D/Source/bin/CoreData/PostProcess