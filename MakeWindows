# 1 for 64bit, 0 for 32bit:
ARCH=1
PRJ_CONFIG=Release
URHO3D_SRC_DIR=Urho3D/Source

Urho3D_Windows:
	cd $(URHO3D_SRC_DIR) && cmake -E make_directory ../Urho3D_Windows && cmake -E chdir ../Urho3D_Windows cmake -G "Visual Studio 14 Win64" ../Urho3D_Windows -DURHO3D_OPENGL=1 -DURHO3D_64BIT=$(ARCH) -VS=14 $(CURDIR)/$(URHO3D_SRC_DIR)/

libUrho3D.a: Urho3D_Windows
	cd Urho3D/Urho3D_Windows && cmake --build . --target Urho3D --config $(PRJ_CONFIG)